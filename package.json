{
  "name": "trailhead-backend",
  "version": "1.1.0",
  "description": "",
  "main": "src/app.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon -e js,njk --watch src --watch templates src/app.js",
    "deploy": "ssh node@doc 'cd doc-trailhead && ./scripts/redeploy.sh'",
    "download-db": "./scripts/download-db.sh",
    "format": "eslint src --fix",
    "lint": "eslint src",
    "set-admin": "./scripts/set-user.sh 1",
    "set-leader": "./scripts/set-user.sh 2",
    "start": "NODE_ENV=production node src/app.js",
    "test": "node --test"
  },
  "engines": {
    "node": ">=22"
  },
  "type": "module",
  "dependencies": {
    "better-sqlite3": "^11.3.0",
    "date-arithmetic": "^4.1.0",
    "dateformat": "^3.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.21.0",
    "fullcalendar-scheduler": "6.0.3",
    "htmx.org": "1.8.5",
    "morgan": "^1.10.0",
    "node-cron": "^2.0.3",
    "nodemailer": "^6.8.0",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "eslint": "^8.26.0",
    "eslint-config-standard": "^17.0.0",
    "nodemon": "^3.1.7"
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "camelcase": 0,
      "n/handle-callback-err": 0,
      "space-before-function-paren": [ "error", "never" ]
    }
  }
}
